<h1>Employees</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each employees.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each employees}}
        <tr>
            <td>{{this.Name}}</td>
            <td>{{this.Zoo}}</td>
            <td>{{this.Role}}</td>

            {{! UPDATE form}}
            <form id='update_employee_form'>
                <td>
                    <button type='submit'>
                        Update
                    </button>
                </td>
            </form>
            {{! DELETE form }}
            <form id='delete_employee_form'>
                <input type='hidden' name='delete_employee_id' value='{{this.employee_ID}}' />
                <input type='hidden' name='delete_employee_name' value='{{this.Name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create an Employee</h2>
<form class='cuForm' id='create_employee_form' method='POST' action='/ZL-Employees/create'>
    <label for='create_employee_fname'>First Name: </label>
    <input type='text' name='create_employee_fname' id='create_employee_fname' required />

    <label for='create_employee_lname'>Last Name: </label>
    <input type='text' name='create_employee_lname' id='create_employee_lname' />

    <label for='create_employee_zoo'>Zoo Name: </label>
    <select name='create_employee_zoo' id="create_employee_zoo">
        <option value='NULL' selected>Select a Zoo</option>
        {{#each zoos}}
        <option value='{{this.zoo_ID}}' required>{{this.zoo_name}}</option>
        {{/each}}
    </select>

    <label for='create_employee_role'>Role Name: </label>
    <select name='create_employee_role' id="create_employee_role">
        <option value='NULL' selected>Select a Role</option>
        {{#each roles}}
        <option value='{{this.role_ID}}' required>{{this.role_title}}</option>
        {{/each}}
    </select>

    <input type='submit' />
</form>