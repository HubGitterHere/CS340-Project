<h1>Species</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each species.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, common_name, scientific_name, homeworld and age }}
        {{#each species}}
        <tr>
            <td>{{this.[Common Name]}}</td>
            <td>{{this.[Scientific Name]}}</td>
            <td>{{this.Diet}}</td>
            <td>{{this.Enclosure}}</td>

            {{! UPDATE form}}
            <form id='update_species_form'>
                <td>
                    <button type='submit'>
                        Update
                    </button>
                </td>
            </form>
            {{! DELETE form }}
            <form id='delete_species_form'>
                <input type='hidden' name='delete_species_id' value='{{this.species_ID}}' />
                <input type='hidden' name='delete_species_name' value='{{this.common_name}} {{this.scientific_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Species</h2>
<form class='cuForm' id='create_species_form' method='POST' action='/ZL-Species/create'>
    <label for='create_species_common_name'>Common Name: </label>
    <input type='text' name='create_species_common_name' id='create_species_common_name' required />

    <label for='create_species_scientific_name'>Scientific Name: </label>
    <input type='text' name='create_species_scientific_name' id='create_species_scientific_name' />

    <label for='choose_diet'>Diet: </label>
    <select name='choose_diet' id="choose_diet">
        <option value='NULL' selected>Select a diet</option>
        {{#each diets}}
        <option value='{{this.diet_ID}}' required>{{this.diet_name}}</option>
        {{/each}}
    </select>

    <label for='choose_enclosure'>Enclosure: </label>
    <select name='choose_enclosure' id="choose_enclosure">
        <option value='NULL' selected>Select an enclosure</option>
        {{#each enclosures}}
        <option value='{{this.enclosure_ID}}' required>{{this.enclosure_type}}</option>
        {{/each}}
    </select>

    <input type='submit' />
</form>