<h1>Animals</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each animals.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the animal_ID, zoo_ID, species_ID, arrival_date, and animal_name }}
        {{#each animals}}
        <tr>
            <td>{{this.Name}}</td>
            <td>{{this.Species}}</td>
            <td>{{this.Zoo}}</td>
            <td>{{this.[Arrival Date]}}</td>
            {{! DELETE form }}
            <form id='delete_animal_form' method='POST' action='/ZL-Animals/delete'></form>
                <input type='hidden' name='delete_animal_ID' value='{{this.animal_ID}}' />
                <input type='hidden' name='delete_animal_name' value='{{this.Name}}' />
                <td title = "Delete">
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Add an Animal</h2>
<form class='cuForm' id='create_animal_form' method='POST' action='/ZL-Animals/create'>
    <label for='create_name'>Name: </label>
    <input type='text' name='create_name' id='create_name' required />

    <label for="choose_species" >Species: </label>
    <select name="choose_species" id="choose_species">
        <option selected>Select a species</option>
        {{#each species}}
        <option value="{{this.species_ID}}" required>
            {{this.common_name}}
        </option>
        {{/each}}
    </select>

    <label for="choose_animal_zoo">Zoo: </label>
    <select name="choose_animal_zoo" id="choose_animal_zoo">
        <option value = 1>Select a Zoo</option>
        {{#each zoos}}
        <option value='{{this.zoo_ID}}' required>
            {{this.zoo_name}}
        </option>
        {{/each}}
    </select>

    <label for='create_animal_age'>Arrival Date:</label>
    <input type='date' name='create_animal_arrival_date' id='create_animal_arrival_date' min='0' />

    <input type='submit' value = "Create"/>
</form>

{{! UPDATE form }}
<h2>Update a Animal</h2>
<form class='cuForm' id='update_animal_form' method='POST' action='/ZL-Animals/update'>
    <label for='update_animal_id'>Animal to Update: </label>
    <select name='update_animal_id' id='update_animal_id' required>
        <option value='' disabled selected>Select a Animal</option>
        {{#each animals}}
        <option value='{{this.animal_ID}}' required>
            {{this.animal_ID}}
            -
            {{this.Name}}
        </option>
        {{/each}}
    </select>

    <label for="update_animal_species" >Species: </label>
    <select name="update_animal_species" id="update_animal_species">
        <option selected>Select a species</option>
        {{#each species}}
        <option value="{{this.species_ID}}" required>
            {{this.common_name}}
        </option>
        {{/each}}
    </select>

    <label for="update_animal_zoo">Zoo: </label>
    <select name="update_animal_zoo" id="update_animal_zoo">
        <option value = 1>Select a Zoo</option>
        {{#each zoos}}
        <option value='{{this.zoo_ID}}' required>
            {{this.zoo_name}}
        </option>
        {{/each}}
    </select>

    <label for='create_animal_age'>Arrival Date:</label>
    <input type='date' name='create_animal_arrival_date' id='create_animal_arrival_date' min='0' />

    <input type='submit' />
</form>
