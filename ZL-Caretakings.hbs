<h1>Care Takings</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each caretakings.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each caretakings}}
        <tr>
            <td>{{this.animal}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.diet}}</td>
            <td>{{this.feeding_time}}</td>
            <td>{{this.enclosure_type}}</td>

            {{! DELETE form }}
            <form id='delete_caretaking_form'>
                <input type='hidden' name='delete_caretaking_id' value='{{this.animal_ID}}' />
                <input type='hidden' name='delete_caretaking_name' value='{{this.fname}} {{this.lname}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Caretaking</h2>
<form class='cuForm' id='create_caretaking_form'>

    <label for='choose_animal'>Animal: </label>
    <select name='choose_animal' id="choose_animal">
        <option value='NULL' selected>Select an animal</option>
        {{#each animals}}
        <option value='{{this.animal_ID}}' required>{{this.animal_name}}</option>
        {{/each}}
    </select>

    <label for='choose_employee'>Employee: </label>
    <select name='choose_employee' id="choose_employee">
        <option value='NULL' selected>Select an employee</option>
        {{#each employees}}
        <option value='{{this.employee_ID}}' required>{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
    </select>

    <label for='choose_diet'>Diet: </label>
    <select name='choose_diet' id="choose_diet">
        <option value='NULL' selected>Select a diet</option>
        {{#each diets}}
        <option value='{{this.diet_ID}}' required>{{this.diet_details}}</option>
        {{/each}}
    </select>

    <label for='choose_feeding_time'>Feeding Time: </label>
    <input type = 'time' name = 'choose_feeding_time' id='choose_feeding_time'>

    </select>

    <label for='choose_enclosure'>Enclosure: </label>
    <select name='choose_enclosure' id="choose_enclosure">
        <option value='NULL' selected>Select an enclosure</option>
        {{#each enclosures}}
        <option value='{{this.enclosure_ID}}' required>{{this.enclosure_type}}</option>
        {{/each}}
    </select>

    <input type='submit' />
</form>

