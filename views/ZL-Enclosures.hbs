<h1>Enclosures</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each enclosures.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each enclosures}}
        <tr>
            <td>{{this.Enclosure}}</td>

            {{! Enclosure form}}
            <form id='update_enclosure_form'>
                <td>
                    <button type='submit'>
                        Update
                    </button>
                </td>
            </form>
            {{! DELETE form }}
            <form id='delete_enclosure_form'>
                <input type='hidden' name='delete_enclosure_id' value='{{this.id}}' />
                <input type='hidden' name='delete_enclosure_name' value='{{this.Enclosure}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Enclosure</h2>
<form class='cuForm' id='create_enclosure_form' method='POST' action='/ZL-Enclosures/create'>
    <label for='create_enclosure_type'>Enclosure Type: </label>
    <input type='text' name='create_enclosure_type' id='create_enclosure_type' required />

    <input type='submit' />
</form>