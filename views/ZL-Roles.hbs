<h1>Roles</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each roles.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each roles}}
        <tr>
            <td>{{this.Role}}</td>
            {{! ROLES form}}
            <form id='update_role_form'>
                <td>
                    <button type='submit'>
                        Update
                    </button>
                </td>
            </form>
            {{! DELETE form }}
            <form id='delete_role_form'>
                <input type='hidden' name='delete_role_id' value='{{this.id}}' />
                <input type='hidden' name='delete_role_name' value='{{this.role}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Role</h2>
<form class='cuForm' id='create_role_form' method='POST' action='/ZL-Roles/create'>
    <label for='create_role_title'>Role Title: </label>
    <input type='text' name='create_role_title' id='create_role_title' required />

    <input type='submit' />
</form>
